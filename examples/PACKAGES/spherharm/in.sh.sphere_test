# Test

variable	name string spherical_harmonics_testing
atom_style	spherharm 0 120 /home/james/lammps/examples/USER/spherharm/sphere.dat
units		si
newton off
# newton on

###############################################
# Geometry-related parameters
###############################################

variable	boxx equal 1000
variable	boxy equal 1000
variable	boxz equal 1000

#############
processors * * 1
region		boxreg block 0 ${boxx} 0 ${boxy} 0 ${boxz}
create_box	2 boxreg
change_box	all boundary f f f

create_atoms 	1 single 445.0 500.0 500.0
create_atoms 	2 single 555.0 500.0 500.0

set 		group all mass 1.0

set 		atom 1 vx 1.0 vy 0.0 vz 0.0
set 		atom 2 vx -1.0 vy 0.0 vz 0.0


set		atom 1 sh/shape 1
set		atom 2 sh/shape 1
set		group all sh/quat/random 4

fix		time_fix all nve/sh

neigh_modify	delay 0 every 1 check yes
comm_modify	vel yes

#thermo 1

#compute pnode all nodes/atom 120
#compute pmesh all mesh/atom
#compute TransKE all ke
#compute RotKE all erotate/spherharm
#compute PEcalc all efunction/spherharm
#variable ETotal equal "c_PEcalc + c_TransKE + c_RotKE"
##thermo_style custom step c_PEcalc c_TransKE c_RotKE
##thermo_style custom step c_pmesh[*]

#dump mydump1 all custom 1 dump1.%.test id c_pnode[*]
#dump mydump2 all custom 1 dump2.%.test id c_pmesh[*]

pair_style 	spherharm
pair_coeff 	* * 5.0e-9 2.0

timestep	0.005e2

run		1000
